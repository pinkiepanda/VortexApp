<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.example.android.vortexapp.TrainActivity"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Train FMG Band"
        android:id="@+id/titleView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        style="@style/TextColor"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <Spinner
        android:id="@+id/functionsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/movefunctionslist"
        android:prompt="@string/movefunctionsprompt"
        android:background="@color/cardview_light_background" />

    <TextView
        android:text="Train Time Interval:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/trainTimeView"
        style="@style/TextColor"
        android:layout_marginTop="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <Spinner
        android:id="@+id/timesList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/timeslist"
        android:prompt="@string/movefunctionsprompt"
        android:background="@color/cardview_light_background" />

    <TextView
        android:text="Recommend training each position at least 3 times, ideally 5 times if possible."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        style="@style/TextColor"
        android:id="@+id/infoView"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="T R A I N"
        android:id="@+id/buttonTrain"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/titleView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/seekBar"
        android:layout_alignEnd="@+id/seekBar"
        style="@style/TextColor"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="F I N I S H"
        android:id="@+id/finishButton"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/buttonTrain"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/buttonTrain"
        android:layout_alignEnd="@+id/buttonTrain"
        style="@style/TextColor"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Disconnect"
        android:id="@+id/cancelButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        style="@style/TextColor"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lumn"
        android:layout_alignTop="@+id/textView3"
        android:layout_toRightOf="@+id/cancelButton"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/seekBar"
        style="@style/TextColor"/>

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/dataView"
        tools:text="temp"
        style="@style/TextColor"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

</LinearLayout>
