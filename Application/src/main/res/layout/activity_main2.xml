<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"

    tools:context="com.example.android.vortexapp.MainActivity">

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="31dp"
        android:id="@+id/switch1"
        android:switchTextAppearance="@style/TextAppearance.AppCompat"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_x="71dp"
        android:layout_y="96dp" />

    <Button
        android:text="FMG Connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fmgConnectBtn"
        style="@style/Widget.AppCompat.Button"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/switch1"
        android:layout_x="236dp"
        android:layout_y="117dp" />

    <Button
        android:text="Vortex Pair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vortexPairBtn"
        style="@style/Widget.AppCompat.Button"
        android:layout_above="@+id/fmgConnectBtn"
        android:layout_alignStart="@+id/fmgConnectBtn"
        android:layout_alignEnd="@+id/fmgConnectBtn"
        android:layout_x="239dp"
        android:layout_y="75dp" />

    <ImageButton
        app:srcCompat="@drawable/arrowdown"
        android:id="@+id/backbutton"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:elevation="0dp"
        android:cropToPadding="false"
        android:adjustViewBounds="true"
        android:layout_below="@+id/switch1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp"
        android:layout_x="156dp"
        android:layout_y="363dp"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <ImageButton
        app:srcCompat="@drawable/arrowup"
        android:id="@+id/forwardbutton"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:adjustViewBounds="false"
        android:elevation="0dp"
        android:cropToPadding="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/switch1"
        android:layout_x="156dp"
        android:layout_y="203dp"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <ImageButton
        app:srcCompat="@drawable/arrowright"
        android:id="@+id/rightbutton"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:adjustViewBounds="false"
        android:elevation="0dp"
        android:cropToPadding="false"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/leftbutton"
        android:layout_centerHorizontal="true"
        android:layout_x="237dp"
        android:layout_y="283dp"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <ImageButton
        app:srcCompat="@drawable/arrowleft"
        android:id="@+id/leftbutton"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:adjustViewBounds="false"
        android:elevation="0dp"
        android:cropToPadding="false"
        android:layout_below="@+id/switch1"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/vortexPairBtn"
        android:layout_x="77dp"
        android:layout_y="283dp"
        android:layout_width="100dp"
        android:layout_height="100dp" />

</AbsoluteLayout>
